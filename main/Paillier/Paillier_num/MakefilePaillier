CXX = g++
CXXFLAGS = -Wall -Wextra -g -O3
INCLUDES = -I./include/
LDLIBS = 

SRC = Paillier_num_main_V4.cpp ../../../src/image/image.cpp ../../../src/image/image_pgm.cpp
OBJ = $(SRC:../../../src/%.cpp=../../../obj/%.o)
EXEC = Paillier_num_main.out

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CXX) $(CXXFLAGS) $(INCLUDES) -o $@ $^ $(LDLIBS)

../../../obj/%.o: ../../../src/%.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c -o $@ $<

clean:
	rm -f $(OBJ) $(EXEC)
