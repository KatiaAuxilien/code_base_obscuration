CXX = g++
CXXFLAGS = -Wall -Wextra -g 
INCLUDES = -I./include/
LDLIBS = 

SRC = Paillier_main.cpp ../../src/image.cpp ../../src/image_pgm.cpp ../../src/Paillier.cpp
OBJ = $(SRC:../../src/%.cpp=../../obj/%.o)
EXEC = Paillier_main.out

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CXX) $(CXXFLAGS) $(INCLUDES) -o $@ $^ $(LDLIBS)

../../obj/%.o: ../../src/%.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c -o $@ $<

clean:
	rm -f $(OBJ) $(EXEC)
