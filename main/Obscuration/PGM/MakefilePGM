CXX = g++
CXXFLAGS = -Wall -Wextra -g 
INCLUDES = -I./include/
LDLIBS = 

SRC = ObscurationPGM_main.cpp ../../../src/image/image.cpp ../../../src/image/image_pgm.cpp ../../../src/image/image_ppm.cpp ../../../src/image/ImageBase.cpp ../../../src/encryption/AES/AES.cpp
OBJ = $(SRC:../../../src/%.cpp=../../../obj/%.o)
EXEC = ObscurationPGM_main.out

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CXX) $(CXXFLAGS) $(INCLUDES) -o $@ $^ $(LDLIBS)

../../../obj/%.o: ../../../src/%.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c -o $@ $<

clean:
	rm -f $(OBJ) $(EXEC)
